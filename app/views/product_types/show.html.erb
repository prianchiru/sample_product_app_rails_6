
<p>
  <strong>Name:</strong> <%= @product_type.name %> <br />
  <strong>Fields:</strong> <br />
    <% @product_type.product_fields.each do |field| %>
      <p class="fields_list">
        <label style="display: inline"> Name: </label> <%= field.name %> <br />
        <label style="display: inline"> Field Type: </label> <%= field.field_type %> <br />
        <label style="display: inline"> Required: </label> <%= field.required %> <br />
        <br />
      </p>
    <% end %>
</p>

<%= link_to 'Edit', edit_product_type_path(@product_type) %> |
<%= link_to 'Back', product_types_path %>
